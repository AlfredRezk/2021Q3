<div id="notifications">
  {{#each msgs}}
    <div class="alert {{class}}" role="alert">
      {{msg}}
      <button type="button" class="close" data-dismiss="alert">
          <span>&times;</span>
      </button>
    </div>
  {{/each}}
</div>


<script>
  document.querySelectorAll('.alert').forEach(msg=>{
    setTimeout(()=>{
      msg.remove();
    }, 2000)
  })
</script>