{{>navbar}}
  <div class="container">
    <div class="row space-top">
      <div class="col-md-12">
        <h1>Profile Page</h1>
        <p>Listing your furniture.</p>
      </div>
    </div>
    <div class="row space-top">

      {{#each myFurnitures}}
      <div class="col-md-4">
        <div class="card text-white bg-primary">
          <div class="card-body">
            <blockquote class="card-blockquote">
              <img src="{{imageUrl}}" class="img-fluid"/>
              <p class="text-center">{{desc}}</p>
              <p class="text-center mb-3 lead"> Made By : <span class="font-weight-bold text-warning">{{maker}}<span></p>
              <p class="text-center mb-3 lead"> Model Year : <span class="font-weight-bold text-warning">{{year}}<span></p>
              <div class="pull-right">
                <a href="/details/{{_id}}" class="btn btn-info">Details</a>
                <a href="/delete/{{_id}}" class="btn btn-danger">Delete</a>
                <a href="/edit/{{_id}}" class="btn btn-warning">Edit</a>
              </div>
            </blockquote>
          </div>
        </div>
      </div>
      {{else}}
      <div class="col-md-6 m-auto"> 
        <h2 class="mt-5"> No Furniture Available </h2>
        <p>There are no furniture in your profile, if you'd like to sell furniture on the site, add one</p>
      </div>
      {{/each}}
    </div>
  </div>

  {{>notifications}}