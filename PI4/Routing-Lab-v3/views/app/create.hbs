{{>navbar}}
	<div class="container">
    <div class="row space-top">
      <div class="col-md-12">
        {{#if editMode}}
        <h1>Edit a Furniture </h1>
        <p>Please update any of these fields</p>

        {{else}}

        <h1>Create New Furniture</h1>
        <p>Please fill all fields.</p>
        {{/if}}
      </div>
    </div>
    <form action="{{#if editMode}} /edit{{else}}/create{{/if}}" method="POST">
      <div class="row space-top mb-3">
        <div class="col-md-4">
          
          <div class="form-group">
            <label class="form-control-label" for="new-make">Make</label>
            <input 
            class="form-control {{#if maker.invalid}}is-invalid{{/if}} {{#if maker.valid}}is-valid{{/if}}" 
            id="new-make" type="text" 
            name="maker" value="{{maker.input}}">
        
            <div class="invalid-feedback">{{maker.msg}}</div>
          </div>


          <div class="form-group">
            <label class="form-control-label" for="new-model">Model</label>
            <input 
            class="form-control {{#if model.invalid}}is-invalid{{/if}} {{#if model.valid}}is-valid{{/if}}" 
            id="new-model" type="text"
            name="model"  value="{{model.input}}">
               <div class="invalid-feedback">{{model.msg}}</div>
          </div>

          <div class="form-group">
            <label class="form-control-label" for="new-year">Year</label>
            <input 
             class="form-control {{#if year.invalid}}is-invalid{{/if}} {{#if year.valid}}is-valid{{/if}}" 
            id="new-year" type="number"
            name="year"  value="{{year.input}}"
            >
                <div class="invalid-feedback">{{year.msg}}</div>
          </div>


          <div class="form-group">
            <label class="form-control-label" for="new-description">Description</label>
            <input 
               class="form-control {{#if desc.invalid}}is-invalid{{/if}} {{#if desc.valid}}is-valid{{/if}}"  
            id="new-description" type="text" name="desc"  value="{{desc.input}}">
                <div class="invalid-feedback">{{desc.msg}}</div>
          </div>
        </div>

        <div class="col-md-4">

          <div class="form-group">
            <label class="form-control-label" for="new-price">Price</label>
            <input 
             class="form-control {{#if price.invalid}}is-invalid{{/if}} {{#if price.valid}}is-valid{{/if}}"  
             id="new-price" type="number" name="price"  value="{{price.input}}">
                 <div class="invalid-feedback">{{price.msg}}</div>
          </div>

          <div class="form-group">
            <label class="form-control-label" for="new-image">Image</label>
            <input 
             class="form-control {{#if imageUrl.invalid}}is-invalid{{/if}} {{#if imageUrl.valid}}is-valid{{/if}}"  
            id="new-image" type="text" name="imageUrl"  value="{{imageUrl.input}}">
            <div class="invalid-feedback">{{imageUrl.msg}}</div>
          </div>


          <div class="form-group">
            <label class="form-control-label" for="new-material">Material (optional)</label>
            <input class="form-control" id="new-material" type="text" name="material"  value="{{material.input}}">
            
          </div>

          {{#if editMode}}
          <input type="hidden" name="id" value={{id}}>
          {{/if}}

        
        </div>
            <div class="col-md-8 m-auto">
                <input type="submit" class="btn {{#if editMode}}btn-warning{{else}}btn-primary{{/if}}" value="{{#if editMode}} Update{{else}}Create{{/if}}" />
            </div>
      </div>
    </form>
  </div>

  {{>notifications}}